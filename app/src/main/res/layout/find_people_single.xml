<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_people_cardView"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:elevation="30dp"
    tools:targetApi="lollipop">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/find_people_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_person"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/findpeople_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif"
        android:text="@string/username"
        android:textColor="#000"
        android:textSize="20sp" />


    <Button
        android:id="@+id/request_accept_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="270dp"
        android:scaleType="center"
        app:layout_anchorGravity="bottom|end|right"
        android:drawableLeft="@drawable/ic_merge"
        android:visibility="gone"
        android:paddingLeft="18dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/request_cancel_btn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/colorRed"
        android:layout_marginStart="340dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_cancel"
        android:visibility="gone"
        android:paddingLeft="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.cardview.widget.CardView>